        function hideShowAdminMenu(){
            var data = JSON.parse(sessionStorage.getItem('currentUser'))
            let x = document.getElementById("adminMenu");
            if (Number(data.role) == 0){
                x.style.visibility = "hidden";
            }else{
                x.style.visibility = "visible";
            }
        }
    </script>

