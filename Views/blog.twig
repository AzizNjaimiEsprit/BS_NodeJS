{% include 'header.twig' %}

<!-- Start Blog Area -->
<div class="page-blog bg--white section-padding--lg blog-sidebar right-sidebar">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog-page">
                    <div class="page__header">
                        <h2>Category Archives: HTML</h2>
                    </div>
                    <!-- Start Single Post -->
                    {% for row in rows %}
                        <article class="blog__post d-flex flex-wrap">
                            <div class="thumb">
                                <a href="blog-details.twig">
                                    <img src="http://localhost:5000/blog/getPostAttachment/{{ row.blogId }}" alt="blog images">
                                </a>
                            </div>
                            <div class="content">
                                <h4><a href="blog-details.twig">{{ row.title }}</a></h4>
                                <ul class="post__meta">
                                    <li>Posts by : <a href="#">{{ row.full_name }}</a></li>
                                    <li class="post_separator">/</li>
                                    <li>{{ row.publish_date }}</li>
                                </ul>
                                <p>{{ row.body | slice(1,200) }} ...</p>
                                <div class="blog__btn">
                                    <a class="shopbtn" href="/blog/blogDetails/{{ row.blogId }}">read more</a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                    <!-- End Single Post -->

                    <!-- End Single Post -->
                </div>
                <ul class="wn__pagination">
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#"><i class="zmdi zmdi-chevron-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Blog Area -->

{% include 'footer.twig' %}