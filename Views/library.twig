{% include 'header.twig' %}
<script type="text/javascript" src="https://unpkg.com/pdfobject@2.2.5/pdfobject.js"></script>
<style>
    .pdfobject-container { height: 30rem; border: 1rem solid rgba(0,0,0,.1); }
</style>
<!-- Start Shop Page -->
<div class="page-shop-sidebar left--sidebar bg--white section-padding--lg">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-12 order-2 order-lg-1 md-mt-40 sm-mt-40">
                <div class="shop__sidebar">
                    <aside class="wedget__categories poroduct--cat">
                        <h3 class="wedget__title">My Online Books</h3>
                        <ul>

                            {% for book in books %}
                                <li>
                                    <a onclick="showPDF('{{ book.id }}')">
                                        {{ book.title }} <span>({{ book.page_reached }})</span></a>
                                </li>
                            {% endfor %}
                        </ul>
                    </aside>

                </div>
            </div>
            <div class="col-lg-9 col-12 order-1 order-lg-2">

                <div class="tab__container">
{#                    <embed  id="pdfViewer" src="http://localhost:5000/book/getBookPDF/33" width="1100" height="800" type="application/pdf">#}
                    <div style="height: 800px;width:1100px" id="example1"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var options = {
        height: "800px",
        width :"1100px",
        pdfOpenParams: { view: 'FitV', page: '34' }
    };

    PDFObject.embed("", "#example1",options);


    function showPDF(bookId){
        PDFObject.embed("http://localhost:5000/onlineBook/getBookPDF/"+bookId, "#example1",options);
    }

</script>
